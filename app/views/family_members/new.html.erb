<div class="row">
  <div class="col-md-6">
    <% if @parent %>
      <h3>New child for <%= @parent.full_name %></h3>
    <% end %>
    <%= form_for [@family, @family_member] do |f| %>
      <%= f.hidden_field :parent_id %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control', placeholder: "Enter first name" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_now %>
        <%= f.text_field :last_name_now, class: 'form-control', placeholder: "Enter last name now" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name_birth %>
        <%= f.text_field :last_name_birth, class: 'form-control', placeholder: "Enter last name at birth " %>
      </div>
      <fieldset class="form-group">
        <%= label_tag 'Gender' %>
        <div>
          <%= f.label :gender, 'Male' %>
          <%= f.radio_button :gender, 'Male' %>
        </div>
        <div>
          <%= f.label :gender, 'Female' %>
          <%= f.radio_button :gender, 'Female' %>
        </div>
      </fieldset>
      <div class="form-group">
        <%= f.label :birthday %>
        <%= f.text_field :birthday, class: 'form-control', placeholder: "MM/DD/YYYY" %>
      </div>
      <div class="form-group">
        <%= f.label :this_person_is_living, class: 'checkbox'%>
        <%= f.check_box :this_person_is_living%> This person is living
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
