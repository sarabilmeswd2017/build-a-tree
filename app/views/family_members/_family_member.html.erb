<div class="media">
   <div class="media-body">
     <h2 class="media-heading">
       <%= link_to "#{family_member.first_name} #{family_member.last_name_now}", family_family_member_path(family_member.family, family_member) %>
       <%= link_to "Add Child", new_family_family_member_path(@family, parent_id: family_member), class: 'btn btn-success' %>
       <%= link_to "Delete", [family_member.family, family_member], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this family member?' } %>
     </h2>
     <% if family_member.parent %>
     <h3>Parent: <%= family_member.parent.full_name || 'Not specified' %></h3>
     <% end %>
     <% if family_member.children %>
      <% family_member.children.each do |child| %>
     <h3>Child/Children: <%= child.full_name || 'Not specified' %></h3>
     <% end %>
      <% end %>
   </div>
 </div>
